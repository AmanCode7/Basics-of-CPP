{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", 
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task for building C++ files",
            "options": {
                "shell": {
                    "executable": "C:/Windows/System32/cmd.exe",
                    "args": ["/c"]
                }
            }
        }
    ]
}
